<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silvery_grey">
    <RelativeLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_alignParentLeft="true"
            style="@style/title_type"
            />
        <com.smartlab.drivetrain.view.HandyTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名"
            android:layout_centerInParent="true"
            style="@style/title_type"
            />
        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/title_type"
            android:text="保存"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:padding="@dimen/login_edit_padding"
        >
        <com.smartlab.drivetrain.view.HandyTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textSize="16sp"/>
        <AutoCompleteTextView
            android:id="@+id/edit_info"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/login_edit_padding"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />
    </LinearLayout>
    <com.smartlab.drivetrain.view.HandyTextView
        android:layout_below="@+id/edit_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_edit_padding"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="设置后将不可更改，请细心填写"/>
</LinearLayout>