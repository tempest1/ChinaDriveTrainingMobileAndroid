<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_flipping_loading"
    >

    <com.smartlab.drivetrain.view.FlippingImageView
        android:id="@+id/fliImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/app_iconss"
        />
    <com.smartlab.drivetrain.view.HandyTextView
        android:id="@+id/loadingMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="left|center"
        android:textColor="@color/black"
        android:textSize="14sp"/>
</LinearLayout>