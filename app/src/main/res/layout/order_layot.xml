<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:background="@drawable/bg_click"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"
    >
    <TextView
        android:id="@+id/orderId"
        style="@style/order"
        />
    <TextView
        android:id="@+id/orderTime"
        style="@style/order"
        />
    <TextView
        android:id="@+id/schoolId"
        style="@style/order"
        />
    <TextView
        android:id="@+id/description"
        style="@style/order"
        />

    <TextView
        android:id="@+id/money"
        style="@style/order"
        android:textSize="@dimen/text_size_16"
        />
    <TextView
        android:id="@+id/answer"
        android:padding="@dimen/padding_image"
        android:background="@color/activity_bg_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <RelativeLayout
        android:id="@+id/state_layout"
        android:layout_marginTop="@dimen/login_edit_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/state_tv"
            style="@style/layout"
            android:textSize="@dimen/text_size_16"
            />
        <Button
            android:id="@+id/cancel"
            android:layout_toLeftOf="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_small"
            android:background="@drawable/btn_cancel_order"
            />
        <Button
            android:id="@+id/pay"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_small"
            android:background="@drawable/btn_buy_bg"
            />
    </RelativeLayout>
</LinearLayout>