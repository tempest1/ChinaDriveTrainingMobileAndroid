<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/login_edit_padding"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/login_edit_padding"
        >
        <TextView
            android:id="@+id/title"
            android:text="请选择"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:id="@+id/object_radio"
            android:layout_below="@+id/title"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/object_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/km2"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/object_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/km3"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </RelativeLayout>
    <TextView
        android:id="@+id/name"
        android:background="@color/white"
        android:layout_marginTop="@dimen/login_edit_padding"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/phone_layout"
        android:background="@drawable/bg_click"
        android:clickable="true"
        android:layout_marginTop="@dimen/login_edit_padding"
        android:paddingBottom="@dimen/login_edit_padding"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="@dimen/login_edit_padding"
            android:layout_marginBottom="@dimen/login_edit_padding"
            android:layout_width="@dimen/stork_width"
            android:layout_height="match_parent"
            android:background="@color/linght_gray"
            android:layout_marginRight="@dimen/login_edit_padding"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/call"
            android:background="@null"
            android:textColor="@color/grey_btn_on_end_gradient"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/login_edit_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:text="请选择时间"
        />
    <LinearLayout
        android:layout_below="@+id/kemu_layout"
        android:id="@+id/banci_layout"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="日期："
            />
        <Spinner
            android:id="@+id/date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/bg_order"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="时间："/>
        <Spinner
            android:id="@+id/dateTime"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/bg_order"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        >
        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dot_margin_buttom"
            android:layout_marginRight="@dimen/dot_margin_buttom"
            android:layout_gravity="center_horizontal"
            android:text="@string/appoint"
            android:background="@drawable/btn_bg_green"
            />
    </LinearLayout>

</LinearLayout>