<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_click"
    >
    <LinearLayout
        android:id="@+id/info_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/login_edit_padding"
        >
        <TextView
            android:id="@+id/info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_title"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/info_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_height"
            android:src="@mipmap/app_aligame"
            android:layout_marginTop="@dimen/padding_image"
            android:scaleType="fitXY"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttom"
        android:layout_below="@+id/info_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/login_edit_padding"
        android:paddingRight="@dimen/login_edit_padding"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间："/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-11-2"/>
    </LinearLayout>
</RelativeLayout>